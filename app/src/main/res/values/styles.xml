<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text_white_14">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_white_12">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_white_16">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text_black_14">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="text_gray_14">
        <item name="android:textColor">@color/text_small_light</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="text_gray_12">
        <item name="android:textColor">@color/text_small_light</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_yellow_10">
        <item name="android:textColor">@color/text_main_on</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="black_light_14">
        <item name="android:textColor">@color/text_aim</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="MyDialogStyle" parent="android:Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>

    </style>

</resources>
