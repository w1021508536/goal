<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="283dp"
                android:background="@mipmap/bg_level"
                android:paddingTop="63dp"
                android:visibility="visible">


                <ImageView
                    android:id="@+id/img_icon_level"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/icon_zhuxiaobao" />

                <TextView
                    android:id="@+id/tv_expNums_level"
                    style="@style/text_white_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_icon_level"
                    android:layout_centerHorizontal="true"
                    android:text="经验值：0" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/rl_height"
                    android:layout_below="@+id/tv_expNums_level"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/top_left"
                    android:layout_marginRight="@dimen/top_left"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_level1_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_1" />

                    <LinearLayout
                        android:id="@+id/ll_line1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_1"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level2_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_2" />

                    <LinearLayout
                        android:id="@+id/ll_line3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_3"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level3_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_3" />

                    <LinearLayout
                        android:id="@+id/ll_line4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_4"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level4_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_4" />

                    <LinearLayout
                        android:id="@+id/ll_line5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_5"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level5_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_5" />

                    <LinearLayout
                        android:id="@+id/ll_line6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_6"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level6_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_6" />

                    <LinearLayout
                        android:id="@+id/ll_line7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_7"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level7_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_7" />

                    <LinearLayout
                        android:id="@+id/ll_line8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <View
                            android:id="@+id/view_line_red_8"
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@color/line_level_gray" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_level8_level"
                        android:layout_width="@dimen/img_oval_level"
                        android:layout_height="@dimen/img_oval_level"
                        android:src="@mipmap/icon_level_gray_8" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rl_height"
                android:orientation="horizontal"
                android:padding="@dimen/top_left">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_level_blue" />

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="等级特权" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="horizontal"
                android:padding="@dimen/top_left">

                <LinearLayout
                    android:id="@+id/ll_aim_level"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/background_oval_level_gray"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/left_iocn" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可发起" />

                        <TextView
                            android:id="@+id/tv_aimNums_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/chat_top" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个目标" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_red_level"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/background_oval_level_gray"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/right_icon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可收到" />

                        <TextView
                            android:id="@+id/tv_redNums_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/chat_top" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个红包" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/rl_height"
                android:orientation="horizontal"
                android:padding="@dimen/top_left"
                android:visibility="visible">

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/bg_level_blue" />

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="快速提升经验" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/top_left">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blue_level"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_share_level"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/exp_share_icon" />


                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_share_level"
                        android:singleLine="true"
                        android:text="+20exp" />

                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_share_level"
                        android:text="分享" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"

                    android:layout_weight="1"
                    android:background="@drawable/selector_blue_level"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_help_level"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/exp_help_icon" />


                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_help_level"
                        android:singleLine="true"
                        android:text="+10exp" />

                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_help_level"
                        android:text="助力" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blue_level"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_great_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/exp_great_icon" />


                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_great_level"
                        android:singleLine="true"
                        android:text="+2exp" />

                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_great_level"
                        android:text="点赞" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/top_left"
                android:paddingLeft="@dimen/top_left"
                android:paddingRight="@dimen/top_left">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blue_level"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_comment_level"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/exp_comment_icon" />


                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_comment_level"
                        android:singleLine="true"
                        android:text="+4exp" />

                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_comment_level"
                        android:text="评论" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blue_level"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_invite_level"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/exp_invite_icon" />


                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_invite_level"
                        android:singleLine="true"
                        android:text="+50exp" />

                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_invite_level"
                        android:text="邀请" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_money_level"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_blue_level"
                    android:paddingBottom="10dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/img_money_level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/exp_money_icon" />


                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_money_level"
                        android:singleLine="true"
                        android:text="+∞exp" />

                    <TextView
                        style="@style/text_white_12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/img_money_level"
                        android:text="存钱" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/left_image_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"

            android:src="@mipmap/icon_arrow_white_left" />

        <TextView
            android:id="@+id/name_text_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="哈哈"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/right_image_include"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:src="@mipmap/icon_chat_set" />

        <TextView
            android:id="@+id/tv_ok_include"
            style="@style/text_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="确定"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>