<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_system_list">

        <TextView
            android:id="@+id/cancel_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="取消"
            android:textColor="@color/text_aim"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:text="选择周期(月)"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ok_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:text="确认"
            android:textColor="@color/text_aim"
            android:textSize="14dp" />

    </RelativeLayout>

    <com.small.small.goal.utils.ScrollerNumberPicker
        android:id="@+id/cycle_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        su:itemNumber="3"
        su:lineColor="@color/background_system_list"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="@color/text_small_light"
        su:normalTextSize="14sp"
        su:selecredTextColor="@color/text_aim"
        su:selecredTextSize="16sp"
        su:unitHight="50dp" />
</LinearLayout>
