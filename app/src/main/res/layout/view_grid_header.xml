<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_activity"
    android:orientation="vertical">

    <com.small.small.goal.utils.mzbanner.MZBannerView
        android:id="@+id/banner_top"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:canLoop="true"
        app:indicatorAlign="center"
        app:open_mz_mode="false" />

    <LinearLayout
        android:id="@+id/ll_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ll_top"
        android:background="#00000000"
        android:visibility="gone"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_guangbo"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@mipmap/icon_notice_red" />


        <com.gongwen.marqueen.MarqueeView
            android:id="@+id/marqueeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#721FCF">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_recharge_phone" />

            <TextView
                android:id="@+id/tv_1_1"
                style="@style/text_white_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/top_left"
                android:layout_marginTop="@dimen/top_left"
                android:text="话费流量充值" />

            <TextView
                android:id="@+id/tv_1_2"
                style="@style/text_white_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_1_1"
                android:layout_marginLeft="@dimen/top_left"
                android:layout_marginTop="5dp"
                android:text="金豆快速充值" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_qb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#14A7DD">

            <TextView
                android:id="@+id/tv_2_1"
                style="@style/text_white_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/top_left"
                android:layout_marginTop="@dimen/top_left"
                android:text="Q币充值" />

            <TextView
                android:id="@+id/tv_2_2"
                style="@style/text_white_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_2_1"
                android:layout_marginLeft="@dimen/top_left"
                android:layout_marginTop="5dp"
                android:text="金豆充Q币省时又省力" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:src="@mipmap/icon_recharge_qb" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        style="@style/text_white_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/bg_view"
        android:drawableLeft="@mipmap/icon_gift_line"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="@dimen/top_left"
        android:paddingTop="10dp"
        android:text="幸运抽奖" />
</LinearLayout>