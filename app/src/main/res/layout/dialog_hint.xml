<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40dp"
    android:layout_marginRight="40dp"
    android:background="@drawable/background_oval_white_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@mipmap/bg_ex"
            android:gravity="center"
            android:padding="20dp"
            android:text="成为代理商"
            android:textColor="@color/white"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="如何成为代理商"
            android:textColor="@color/text_aim"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/top_left"
            android:layout_marginRight="@dimen/top_left"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_haveMoney"
                style="@style/text_black_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成为代理商需要支付698元;即可获得代理商用户专享的推广码，成为代理商"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="代理商享受的权益"
            android:textColor="@color/text_aim"
            android:textSize="20dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_good"
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left"
                    android:layout_marginRight="@dimen/top_left"
                    android:layout_marginTop="10dp"
                    android:text="1、推荐用户：享受推荐用户在小目标平台上完成目标3.6%的奖励。" />

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left"
                    android:layout_marginRight="@dimen/top_left"
                    android:text="2、推荐代理商：享受推荐代理商奖励100元/人 ，推荐10个以上代理商额外奖励培训费100元/人。" />

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left"
                    android:layout_marginRight="@dimen/top_left"
                    android:text="3、推荐分公司：享受推荐分公司加盟诚意金10%奖励。" />

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left"
                    android:layout_marginRight="@dimen/top_left"
                    android:text="4、加权分红：享受全国代理共享公司年业绩1%的分红。" />

                <TextView
                    style="@style/text_black_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/top_left"
                    android:layout_marginRight="@dimen/top_left"
                    android:text="5、市场补贴：享受连续3个月完成日均余额20万，奖励3万期权。" />
            </LinearLayout>

        </ScrollView>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/sign_line" />

        <TextView
            android:id="@+id/tv_go"
            style="@style/text_white_16"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/selector_blue_extension"
            android:gravity="center"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:text="去 支 付" />
    </LinearLayout>
</LinearLayout>