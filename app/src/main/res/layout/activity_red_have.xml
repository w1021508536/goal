            android:id="@+id/img_rotat"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:src="@mipmap/scan_part_circle"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/four_layout"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="100dp"
            android:visibility="gone">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/four_head_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon_head" />

            <ImageView
                android:id="@+id/four_red_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/icon_money_radar_on" />

            <TextView
                android:id="@+id/four_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/background_transparent_gray_corner"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </RelativeLayout>

