<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_view"
    android:orientation="vertical"
    android:paddingLeft="@dimen/top_left"
    android:paddingTop="@dimen/top_left">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_name"
            style="@style/text_white_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="名字" />

        <TextView
            android:id="@+id/tv_telphone"
            style="@style/text_white_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_name"
            android:text="17186787730" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/text_hui_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="5dp"
            android:text="山东省青岛市市北区" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/text_white_hui" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb"
            style="@style/CustomCheckboxTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:text="默认地址"
            android:textColor="@color/text_white_hui"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_set"
            style="@style/text_hui_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/top_left"
            android:layout_toLeftOf="@+id/tv_delete"
            android:padding="10dp"
            android:text="编辑" />

        <TextView
            android:id="@+id/tv_delete"
            style="@style/text_hui_white_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/top_left"
            android:padding="10dp"
            android:text="删除" />
    </RelativeLayout>


</LinearLayout>