<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/top_left"
    android:paddingRight="@dimen/top_left">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_line_top"
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:background="@color/background_system_list" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="1dp"
            android:src="@mipmap/timeline_all_icon" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/background_system_list" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="13dp">

        <TextView
            android:id="@+id/tv_time_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textColor="@color/text_aim"
            android:textSize="26dp" />

        <TextView
            android:id="@+id/tv_timeDay_item"
            style="@style/text_gray_big_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_time_item"
            android:layout_toRightOf="@+id/tv_time_item"
            android:paddingBottom="4dp"
            android:text="分钟前" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_system_list" />

        <TextView
            android:id="@+id/tv_title_item"
            style="@style/text_gray_big_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_time_item"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="来一趟说走就走的旅行" />

        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_below="@+id/tv_title_item"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image2" />


        <LinearLayout
            android:id="@+id/rl_money_item"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/img_item"
            android:layout_marginTop="10dp"
            android:background="@color/background_system_list"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/icon_aim_save2x" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="为自己的目标存入"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_addMoney_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100.0"
                android:textColor="@color/chat_top"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_operation_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_money_item"
            android:orientation="vertical"
            android:paddingBottom="@dimen/top_left"
            android:paddingTop="0dp">

            <RelativeLayout
                android:id="@+id/rl_operation"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <ImageView
                    android:id="@+id/img_great"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/img_commit"
                    android:paddingBottom="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/great_btn" />

                <ImageView
                    android:id="@+id/img_commit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_great"
                    android:padding="5dp"
                    android:src="@mipmap/comment_btn" />

                <ImageView
                    android:id="@+id/img_help"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_commit"
                    android:padding="5dp"
                    android:src="@mipmap/help_btn" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/background_system_list" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/more_btn" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/tv_supports_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150赞  100助力"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/tv_city_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@mipmap/local_icon"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:text="山东 青岛"
                    android:textSize="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_city_item"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null"
                        android:listSelector="@android:color/transparent"></ListView>

                    <TextView
                        android:id="@+id/tv_supportsNums_item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="查看全部20条评论"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>